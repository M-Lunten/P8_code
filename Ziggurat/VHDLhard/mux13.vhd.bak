library ieee;
use ieee.std_logic_1164.all;
use ieee.numeric_std.all;

entity Mux13 is
port(
	iin,xiplusin,yin: in std_logic_vector(15 downto 0);
	output: out std_logic_vector(15 downto 0);
	ctrl: in std_logic_vector(1 downto 0)
	);
end Mux13;

architecture bhv of Mux13 is
begin
	process(ctrl,iin,xiplusin,yin)

	variable outTemp : std_logic_vector(15 downto 0);
	begin
		if ctrl = "01" then
			outTemp := iin;
		elsif ctrl = "10" then
			outTemp := xiplusin;
		elsif ctrl = "11" then
			outTemp := yin;
		end if;
		output <= outTemp;
	end process;
end bhv;